      p &nbsp&nbsp#{publisher.founded_date_format}
    li Website
      p|&nbsp&nbsp #[a(href=publisher.website target='_blank')= publisher.website]
    li Games
      ul 
        for i in games
          li &nbsp&nbsp #[a(href= i.url)= i.name]
  br
  p #[a(href=publisher.url+'/update') Update] 
  p #[a(href=publisher.url+'/delete') Delete] 